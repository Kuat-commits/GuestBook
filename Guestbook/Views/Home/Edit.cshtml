
@model Guestbook.ViewModels.GusetBookViewModel

@{
    ViewBag.Title = "Гостевая книга";
}
<div class="container">
    <div class="row mb-2">
        <div class="card w-100 p-4">
            <h2 class="card-title">Гостевая книга</h2>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="name">Введите имя: </label>
                        <input type="text" class="form-control" name="Name" maxlength="50" value="@Model.Name" required/>
                    </div>
                    <div class="form-group">
                        <label for="email">Введите email:</label>
                        <input type="email" class="form-control" name="Mail" maxlength="50" value="@Model.Mail" required/>
                    </div>
                    <div class="form-group">
                        <label for="message">Введите сообщение:</label>
                        <textarea name="Message" class="form-control" rows="7" cols="40" required>@Model.Message</textarea>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <br/>
                    <input type="submit" class="btn btn-primary" value="Отправить"/>
                }
            </div>
        </div>
    </div>
</div>
